{
  "name": "overclaw-desktop",
  "private": true,
  "version": "0.2.1",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "server": "tsx src/server/index.ts",
    "dev:all": "concurrently \"npm run server\" \"npm run dev\"",
    "dev:electron": "concurrently \"npm run server\" \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:server": "esbuild src/server/index.ts --bundle --platform=node --format=cjs --outfile=electron/server.cjs",
    "build": "tsc -b && vite build && npm run build:server",
    "build:electron": "npm run build && electron-builder --mac --win --linux",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@sentry/electron": "^7.8.0",
    "@sentry/node": "^10.39.0",
    "@sentry/react": "^10.39.0",
    "@stripe/stripe-js": "^8.7.0",
    "@supabase/supabase-js": "^2.95.3",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "stripe": "^20.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "lucide-react": "^0.563.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  },
  "homepage": "https://overclaw.app",
  "author": "OverClaw <support@overclaw.app>",
  "description": "Your AI. Your Way."
}
